@page
@model LoginModel

@{
  ViewData["Title"] = "Log in";
}
<section class="login-container">
  <div class="login-image">
    <img src="~/images/anh.jpg" alt="Login Image" style="max-height: 500px; width: auto;">
  </div>

  <div class="login-form">
    <h2>SYMPHONIA</h2>
    <h3>Log in to SYMPHONIA</h3> <!-- Adjusted text position -->
    <form id="account" method="post">
      <div class="text-danger" asp-validation-summary="ModelOnly"></div>

      <div class="form-item">
        <input asp-for="Input.Email" class="form-control" style="max-width: 1000px;" autocomplete="username"
          aria-required="true" placeholder="name@example.com" />
      </div>

      <div class="form-item">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
          placeholder="password" style="max-width: 1000px;" />
      </div>

      <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe" class="form-label">
          <input style="width: 16px;" class="form-check-input" asp-for="Input.RememberMe" />
          @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
      </div>
      <div class="form-item">
        <button id="login-submit" type="submit" class="btn btn-primary" style="max-width: 200px;">LOGIN</button>
      </div>
      <div>
        <p>
          <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p>
          <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
      </div>
    </form>
  </div>
</section>
@section Styles {
  <style>
    /* Additional inline styles */
    body,
    html {
      padding-top: 80px;
      /* Adjusted to move content down vertically */
      margin-left: 25px;
    }

    /* Left Side */
    .login-image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding-right: 20px;
      /* Add spacing between image and form */
    }

    /* Right Side */
    .login-container {
      display: flex;
      max-width: 5000px;
      /* Adjusted width */
      max-height: 5000px;
      /* Adjusted height */
      margin: auto;
    }

    .login-form {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-top: 60px;
    }

    .login-form h3 {
      margin-bottom: 20px;
      /* Adjusted margin */
      font-size: 20px;
    }

    .login-form input {
      max-width: 1000px;
      /* Max width for input fields */
      width: 450px;
      margin-bottom: 20px;
    }

    .login-form button {
      max-width: 200px;
      /* Max width for the button */
      width: 150px;
      background-color: black;
      /* Change button background color */
      margin-left: 150px;
    }

    .product-title {
      font-size: 1.50rem;
      font-weight: bold;
    }

    /* Remove background color on hover */
    #searchForm .btn-outline-success:hover {
      background-color: transparent !important;
    }

    /* Remove focus border */
    #searchForm .btn-outline-success:focus {
      box-shadow: none !important;
    }

    /* Remove green border from search icon */
    #searchForm .btn-outline-success svg {
      border-color: transparent !important;
    }
  </style>
}

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
