@page
@model IndexModel
@{
  ViewData["Title"] = "Profile";
  ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<section class="update-container">
  <div class="update-image">
    <img src="https://picsum.photos/600/800" alt="update Image" style="max-height: 500px; width: auto;">
  </div>

  <div class="update-form">
    <h2>SYMPHONIA</h2>
    <h3>Update your current info.</h3>
    <form id="profile-form" method="post">
      <div class="text-danger" asp-validation-summary="ModelOnly"></div>

      <div class="form-item">
        <input asp-for="Username" class="form-control" style="max-width: 1000px;" autocomplete="username"
          aria-required="true" placeholder="User Name" />
      </div>

      <div class="form-item">
        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Name"
          style="max-width: 1000px;" />
      </div>
      <div class="form-item">
        <input asp-for="Input.AvatarUrl" class="form-control" autocomplete="image" aria-required="true"
          placeholder="AvatarUrl" style="max-width: 1000px;" />
      </div>
      <div class="form-item">
        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phone" aria-required="true"
          placeholder="PhoneNumber" style="max-width: 1000px;" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
      </div>
      <div class="form-item">
        <button id="update-profile-button" type="submit" class="btn btn-primary"
          style="max-width: 200px;">Update</button>
      </div>
      <p>
        <a asp-page="../Logout" >Logout</a>
      </p>
    </form>
  </div>
</section>

@section Styles {
  <style>
    /* Additional inline styles */
    body,
    html {
      padding-top: 80px;
      /* Adjusted to move content down vertically */
      margin-left: 25px;
    }

    /* Left Side */
    .update-image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding-right: 20px;
      /* Add spacing between image and form */
    }

    /* Right Side */
    .update-container {
      display: flex;
      max-width: 5000px;
      /* Adjusted width */
      max-height: 5000px;
      /* Adjusted height */
      margin: auto;
    }

    .update-form {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-top: 60px;
    }

    .update-form h3 {
      margin-bottom: 20px;
      /* Adjusted margin */
      font-size: 20px;
    }

    .update-form input {
      max-width: 1000px;
      /* Max width for input fields */
      width: 450px;
      margin-bottom: 20px;
    }

    .update-form button {
      max-width: 200px;
      /* Max width for the button */
      width: 150px;
      background-color: black;
      /* Change button background color */
      margin-left: 150px;
    }

    .product-title {
      font-size: 1.50rem;
      font-weight: bold;
    }
  </style>
}

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
