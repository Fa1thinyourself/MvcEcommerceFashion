@page
@model RegisterModel
@{
  ViewData["Title"] = "Register";
}
<section class="register-container">
  <div class="register-image">
    <img src="https://picsum.photos/600/800" alt="Register Image" style="max-height: 500px; width: auto;">
  </div>

  <div class="register-form">
    <h2>SYMPHONIA</h2>
    <h3>Create a new account.</h3>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
      <div class="text-danger" asp-validation-summary="ModelOnly"></div>

      <div class="form-item">
        <input asp-for="Input.Name" class="form-control" style="max-width: 1000px;" autocomplete="name"
          aria-required="true" placeholder="Name" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
      </div>

      <div class="form-item">
        <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true"
          placeholder="Address" style="max-width: 1000px;" />
        <span asp-validation-for="Input.Address" class="text-danger"></span>
      </div>
      <div class="form-item">
        <input asp-for="Input.AvatarUrl" class="form-control" autocomplete="image" aria-required="true"
          placeholder="AvatarUrl" style="max-width: 1000px;" />
        <span asp-validation-for="Input.AvatarUrl" class="text-danger"></span>
      </div>
      <div class="form-item">
        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email"
          style="max-width: 1000px;" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
      </div>
      <div class="form-item">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"
          placeholder="Password" style="max-width: 1000px;" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
      </div>
      <div class="form-item">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"
          placeholder="ConfirmPassword" style="max-width: 1000px;" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
      </div>

      <div class="form-item">
        <button id="registerSubmit" type="submit" class="btn btn-primary" style="max-width: 200px;">Register</button>
      </div>
      <div>

      <p>
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have user</a>
      </p>
      </div>
    </form>
  </div>
</section>
@section Styles {
  <style>
    /* Additional inline styles */
    body,
    html {
      padding-top: 80px;
      /* Adjusted to move content down vertically */
      margin-left: 25px;
    }

    /* Left Side */
    .register-image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding-right: 20px;
      /* Add spacing between image and form */
    }

    /* Right Side */
    .register-container {
      display: flex;
      max-width: 5000px;
      /* Adjusted width */
      max-height: 5000px;
      /* Adjusted height */
      margin: auto;
    }

    .register-form {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      margin-top: 60px;
    }

    .register-form h3 {
      margin-bottom: 20px;
      /* Adjusted margin */
      font-size: 20px;
    }

    .register-form input {
      max-width: 1000px;
      /* Max width for input fields */
      width: 450px;
      margin-bottom: 20px;
    }

    .register-form button {
      max-width: 200px;
      /* Max width for the button */
      width: 150px;
      background-color: black;
      /* Change button background color */
      margin-left: 150px;
    }

    .product-title {
      font-size: 1.50rem;
      font-weight: bold;
    }
  </style>
}

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
